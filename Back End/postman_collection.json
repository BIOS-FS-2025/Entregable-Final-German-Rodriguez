{
  "info": {
    "name": "eCommerce - simple collection",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Register",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": { "mode": "raw", "raw": "{\n  \"username\":\"test\",\n  \"email\":\"test@example.com\",\n  \"password\":\"123456\"\n}" },
        "url": { "raw": "http://localhost:4000/api/auth/register", "protocol": "http", "host": ["localhost:4000"], "path": ["api","auth","register"] }
      }
    },
    {
      "name": "Login",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": { "mode": "raw", "raw": "{\n  \"email\":\"test@example.com\",\n  \"password\":\"123456\"\n}" },
        "url": { "raw": "http://localhost:4000/api/auth/login", "protocol": "http", "host": ["localhost:4000"], "path": ["api","auth","login"] }
      }
    },
    {
      "name": "List items",
      "request": {
        "method": "GET",
        "url": { "raw": "http://localhost:4000/api/items", "protocol": "http", "host": ["localhost:4000"], "path": ["api","items"] }
      }
    },
    {
      "name": "Create item (protected)",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }, { "key": "Authorization", "value": "Bearer <TOKEN>" }],
        "body": { "mode": "raw", "raw": "{\n  \"name\":\"Remera básica\",\n  \"description\":\"Algodón\",\n  \"price\":1290,\n  \"stock\":10\n}" },
        "url": { "raw": "http://localhost:4000/api/items", "protocol": "http", "host": ["localhost:4000"], "path": ["api","items"] }
      }
    },
    {
      "name": "Update item (protected)",
      "request": {
        "method": "PUT",
        "header": [{ "key": "Content-Type", "value": "application/json" }, { "key": "Authorization", "value": "Bearer <TOKEN>" }],
        "body": { "mode": "raw", "raw": "{ \"price\":1490 }" },
        "url": { "raw": "http://localhost:4000/api/items/:id", "protocol": "http", "host": ["localhost:4000"], "path": ["api","items",":id"] }
      }
    },
    {
      "name": "Delete item (protected)",
      "request": {
        "method": "DELETE",
        "header": [{ "key": "Authorization", "value": "Bearer <TOKEN>" }],
        "url": { "raw": "http://localhost:4000/api/items/:id", "protocol": "http", "host": ["localhost:4000"], "path": ["api","items",":id"] }
      }
    }
  ]
}